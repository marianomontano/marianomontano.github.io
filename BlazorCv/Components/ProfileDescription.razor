@inject IStringLocalizer<InterfaceConstants> localizer

<div class="card mb-2">
    <div class="card-header text-white bg-secondary">
        @localizer["profile"]
    </div>
    <div class="row">
        <div class="col-md-3">
            <img src="images/profile.jpg" alt="profile.jpg" class="img-fluid p-3 rounded-3" >
        </div>
        <div class="col-md-9">
            <div class="card-body">
                @foreach (var paragraph in Description)
                {
                    <p>@paragraph</p>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public List<string>? Description { get; set; }
}